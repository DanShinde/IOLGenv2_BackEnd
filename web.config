<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Static content MIME types for media files -->
    <staticContent>
      <remove fileExtension=".jpg" />
      <remove fileExtension=".jpeg" />
      <remove fileExtension=".png" />
      <mimeMap fileExtension=".jpg" mimeType="image/jpeg" />
      <mimeMap fileExtension=".jpeg" mimeType="image/jpeg" />
      <mimeMap fileExtension=".png" mimeType="image/png" />
    </staticContent>

    <handlers>
      <!-- Static file handler for media files (first priority) -->
      <add name="MediaStaticFile"
           path="media/*"
           verb="GET,HEAD"
           modules="StaticFileModule"
           resourceType="File"
           requireAccess="Read" />

      <!-- Static file handler for static files (second priority) -->
      <add name="StaticFile"
           path="static/*"
           verb="GET,HEAD"
           modules="StaticFileModule"
           resourceType="File"
           requireAccess="Read" />

      <!-- Python FastCGI handler for Django (last priority) -->
      <add name="PythonFastCGI"
           path="*"
           verb="GET,HEAD,POST,PUT,DELETE,PATCH"
           modules="FastCgiModule"
           scriptProcessor="D:\Testing_All\IOLGenv2.0\.venv\Scripts\python.exe|D:\Testing_All\IOLGenv2.0\.venv\Lib\site-packages\wfastcgi.py"
           resourceType="Unspecified"
           requireAccess="Script" />
    </handlers>

    <fastCgi>
      <application
           fullPath="D:\Testing_All\IOLGenv2.0\.venv\Scripts\python.exe"
           arguments="D:\Testing_All\IOLGenv2.0\.venv\Lib\site-packages\wfastcgi.py">
        <environmentVariables>
          <environmentVariable name="DJANGO_SETTINGS_MODULE" value="IOLGenv2_BackEnd.settings" />
          <environmentVariable name="PYTHONPATH"          value="D:\Testing_All\IOLGenv2.0\IOLGenv2_BackEnd" />
          <environmentVariable name="WSGI_HANDLER" value="django.core.wsgi.get_wsgi_application()" />
          <environmentVariable name="DJANGO_ENV" value="production" />
        </environmentVariables>
      </application>
    </fastCgi>

    <!-- Ensure IIS doesn't block large file uploads -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="10485760" /><!-- 10MB -->
      </requestFiltering>
    </security>
  </system.webServer>
</configuration>
